{
    "stages": [
        {
            "id": "create_task",
            "name": "任务创建",
            "description": "通过命令创建新的任务，包括标准任务、快速任务和技术债务任务。",
            "checklist": [
                "输入任务名称",
                "选择任务类型",
                "关联Story（如果适用）"
            ],
            "deliverables": [
                "任务ID",
                "任务状态设置为待开始"
            ]
        },
        {
            "id": "assign_task",
            "name": "任务分配",
            "description": "为创建的任务指定负责人，以便于后续跟踪和执行。",
            "checklist": [
                "选择负责人员",
                "确认任务分配"
            ],
            "deliverables": [
                "任务负责人分配记录"
            ]
        },
        {
            "id": "track_task",
            "name": "任务跟踪",
            "description": "通过状态变更跟踪任务进度，包括待开始、进行中、已完成和阻塞。",
            "checklist": [
                "更新任务状态",
                "记录进度"
            ],
            "deliverables": [
                "任务状态历史记录"
            ]
        },
        {
            "id": "complete_task",
            "name": "任务完成",
            "description": "使用命令标记任务为完成，记录实际工时。",
            "checklist": [
                "确认所有任务要求已完成",
                "记录实际工时"
            ],
            "deliverables": [
                "任务完成记录",
                "实际工时报告"
            ]
        }
    ],
    "transitions": [
        {
            "id": "to_assign_task",
            "from_stage": "create_task",
            "to_stage": "assign_task",
            "condition": "任务创建成功",
            "description": "在任务成功创建后，进入任务分配阶段。"
        },
        {
            "id": "to_track_task",
            "from_stage": "assign_task",
            "to_stage": "track_task",
            "condition": "任务分配完成",
            "description": "在任务分配完成后，开始跟踪任务进度。"
        },
        {
            "id": "to_complete_task",
            "from_stage": "track_task",
            "to_stage": "complete_task",
            "condition": "任务状态为已完成",
            "description": "当任务状态更新为已完成时，进入任务完成阶段。"
        },
        {
            "id": "to_blocked_task",
            "from_stage": "track_task",
            "to_stage": "track_task",
            "condition": "任务状态更新为阻塞",
            "description": "如果任务被阻塞，保持在任务跟踪阶段以解决问题。"
        },
        {
            "id": "to_in_progress_task",
            "from_stage": "track_task",
            "to_stage": "track_task",
            "condition": "解除阻塞",
            "description": "解除阻塞后，恢复任务进度跟踪。"
        }
    ]
}
