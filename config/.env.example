# VibeCopilot Environment Variables

# Application
APP_NAME=VibeCopilot
APP_ENV=development  # development, testing, production
DEBUG=true
LOG_LEVEL=debug  # debug, info, warning, error, critical

# AI Integration
OPENAI_API_KEY=your_openai_api_key
AI_MODEL=gpt-4o
PROVIDER=openai  # openai, anthropic, etc.

# 内容解析配置
VIBE_CONTENT_PARSER=openai  # openai, ollama - 内容解析使用的引擎
VIBE_OPENAI_MODEL=gpt-4o-mini  # 使用OpenAI解析内容时的模型
VIBE_OLLAMA_MODEL=mistral  # 使用Ollama解析内容时的模型
VIBE_OLLAMA_BASE_URL=http://localhost:11434  # Ollama服务地址

# 文档引擎配置
DOCS_ENGINE_DB_PATH=data/docs_engine.db  # 文档引擎数据库路径
DOCS_ENGINE_VECTOR_DB_PATH=data/docs_vector.db  # 文档向量数据库路径

# Project Settings
PROJECT_DIR=~/projects
DEFAULT_TEMPLATE=standard
AUTO_SAVE=true
AUTO_BACKUP=true

# GitHub API相关配置
# 创建个人访问令牌: https://github.com/settings/tokens
# 需要的权限: repo, admin:org (projects权限), project
GITHUB_TOKEN=your_personal_access_token_here

# GitHub仓库配置
GITHUB_OWNER=username
GITHUB_REPO=VibeCopilot

# 路线图项目配置
ROADMAP_PROJECT_TITLE=VibeCopilot Roadmap
ROADMAP_DATA_FILE=.ai/roadmap/current.yaml

# Obsidian同步配置
DOCS_SOURCE_DIR=docs  # 标准Markdown文档源目录
OBSIDIAN_VAULT_DIR=.obsidian/vault  # Obsidian知识库目录
AUTO_SYNC_DOCS=false  # 是否自动同步文档到Obsidian
AUTO_SYNC_INTERVAL=300  # 自动同步间隔(秒)
