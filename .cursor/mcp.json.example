{
    "mcpServers": {
      "filesystem": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-filesystem",
          "${workspaceRoot}"
        ]
      },
      "sequential-thinking": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-sequential-thinking"
        ]
      },
      "time": {
        "command": "uvx",
        "args": [
          "mcp-server-time",
          "--local-timezone",
          "Asia/Shanghai"
        ]
      },
      "basic-memory": {
        "command": "uvx",
        "args": [
          "basic-memory",
          "mcp"
        ]
      },
      "git": {
        "command": "uvx",
        "args": [
          "mcp-server-git",
          "--repository",
          "${workspaceRoot}"
        ]
      }
    },
    "version": "1.0.0",
    "transport": "stdio"
  }
